<%
=begin%>
 <h1>Blog Posts</h1>
<% @posts.each do |post| %>
<div class="card">
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <%= post.title %>
      <footer class="blockquote-footer"><%= current_user.first_name %> <%= current_user.last_name %> in <cite title="Source Title"><%= post.created_at.strftime("%Y-%m-%d") %></cite></footer>
      <%= link_to 'View', post_path(post), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
      <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-primary' %>

    </blockquote>
  </div>
</div>
<% end %>
<%= link_to 'Create Post', new_post_path, class: 'btn btn-primary' %>
 
<%
=end%>

<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
      <% @posts.each do |post| %>
          <%= link_to post_path(post) do %>
            <h2 class="post-title">
              <%= post.title %>
            </h2>
          <% end %>
          <p class="post-meta">Posted by
            <a><%= post.user.first_name %> <%= post.user.last_name %></a>
            on <%= post.created_at.strftime("%Y-%m-%d") %> </p>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
            <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-primary' %>
        <hr>
      <% end %>
        </div>      
      <%= link_to 'Create Post', new_post_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>